{
    "compilerOptions": {
      "module": "es2022",
      "esModuleInterop": true,
      "outDir": "./lib",     
      "target": "es2022",
      "rootDir": "./src",           
      "moduleResolution": "node",
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,          
      "strict": true,       
      "skipLibCheck": true            
    },
    "ts-node": {
      "esm": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}