{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "rootDir": "./src",
    "moduleResolution": "node", 
    "outDir": "./lib", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,                                   
    "skipLibCheck": true  
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}